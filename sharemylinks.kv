ShareMyLinksForm:
    rows: 4
    cols: 1
    links_spr: links
    detail_txt: detail
    Label:
        text: str(len(root.links)) + ' links loaded.'
        size_hint_y: 1
    Spinner:
        id: links
        values: root.titles
        size_hint_y: 1
        on_text: root.showdetail(self.text)
    TextInput:
        id: detail
        readonly: True
        size_hint_y: 7
    BoxLayout:
        orientation: 'horizontal'
        size_hint_y: 1
        Button:
            text: 'Delete'
            on_press: root.delete()
